<form action="/users#create" method = "post" accept-charset="UTF-8">
  <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
  <label for="uname">Username:</label>
  <input type="text" id="uname" name="user[username]"><br><br>
  <label for="email">Email:</label>
  <input type="text" id="email" name="user[email]"><br><br>
  <label for="pass">Password:</label>
  <input type="password" id="pass" name="user[password]"><br><br>
  <input type="submit" value="Submit">
</form>